<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#CCFFFFFF"
    android:padding="12dp"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:layout_gravity="center"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/title_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/invitations"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingBottom="12dp"/>

        <ImageButton
            android:id="@+id/messages_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/title_Txt"
            app:layout_constraintEnd_toEndOf="@id/title_Txt"
            android:src="@drawable/baseline_clear_black_18dp"
            android:contentDescription="@string/Temp"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/title_Txt">

            <android.support.design.widget.TabLayout
                android:id="@+id/invite_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/invite_viewpager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:minHeight="300dp"
                android:maxHeight="500dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/invite_tabs">
            </android.support.v4.view.ViewPager>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>