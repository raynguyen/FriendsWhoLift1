<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:padding="12dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/group_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/group_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_image"
            android:hint="@string/group_name"
            android:textSize="20sp"
            android:transitionName="group_name_transition"/>

        <TextView
            android:id="@+id/desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/group_image"
            android:hint="@string/descriptor"/>

        <TextView
            android:id="@+id/tags_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/empty_tags"
            android:layout_below="@+id/group_image"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
