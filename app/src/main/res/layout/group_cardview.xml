<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/group_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/group_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <TextView
                android:id="@+id/group_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/group_image"
                android:text="GROUP NAME HERE"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/desc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/group_image"
                android:text="DESCRIPTION HERE"/>

            <TextView
                android:id="@+id/tags_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAGS"
                android:layout_below="@+id/group_image"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>