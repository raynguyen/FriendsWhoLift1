<?xml version="1.0" encoding="utf-8"?>
<!--Body of the event details-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_create_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/event_desc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_create_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text_primary_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@id/layout_create_desc"
        android:text="@string/primary_tags"
        android:drawableEnd="@drawable/ic_info_outline_black_24dp"
        android:drawableTint="@color/blueish"
        android:gravity="center_vertical"
        android:drawablePadding="12dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_primary_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_primary_header"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:weightSum="6">

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_sports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_fitness"
            style="@style/PrimaryToggle"/>
        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_food"
            style="@style/PrimaryToggle"/>
        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_drinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_drinks"
            style="@style/PrimaryToggle"/>
        <ToggleButton
            android:id="@+id/toggle_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_movie"
            style="@style/PrimaryToggle"/>
        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_chill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_chill"
            style="@style/PrimaryToggle"/>
        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_concert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/toggle_concert"
            style="@style/PrimaryToggle"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/text_privacy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_primary_tags"
        android:layout_marginTop="4dp"
        android:text="@string/event_privacy"
        android:drawableEnd="@drawable/ic_info_outline_black_24dp"
        android:drawableTint="@color/blueish"
        android:gravity="center_vertical"
        android:drawablePadding="12dp"/>

    <RelativeLayout
        android:id="@+id/layout_create_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_privacy_header"
        android:gravity="center_horizontal">

        <ToggleButton
            android:id="@+id/toggle_exclusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/event_exclusive" />
        <ToggleButton
            android:id="@+id/toggle_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/toggle_exclusive"
            android:textOff="@string/event_private"/>
        <ToggleButton
            android:id="@+id/toggle_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/toggle_private"
            android:textOff="@string/event_public"/>
    </RelativeLayout>

    <CalendarView
        android:id="@+id/calendar_create_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_create_privacy"
        android:layout_gravity="center">
    </CalendarView>


