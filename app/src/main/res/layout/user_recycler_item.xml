<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/user_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_face_black_18dp"
        android:contentDescription="@string/Temp"
        android:clickable="false"/>
    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/username"
        android:maxLines="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:clickable="false"/>
    <TextView
        android:id="@+id/authority_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/authority"
        android:maxLines="1"
        android:layout_gravity="center_vertical"
        android:clickable="false"/>

    <ImageButton
        android:id="@+id/add_user_btn"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/baseline_person_add_black_18dp"
        android:contentDescription="@string/Temp"
        android:background="@drawable/button_ripple"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:elevation="2dp"/>
    </LinearLayout>