<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:padding="12dp"
    android:background="#ffffff">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/group_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/group_name_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edit_text_border"/>

    <android.support.constraint.Guideline
        android:id="@+id/privacy_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="320dp"/>

    <TextView
        android:id="@+id/privacy_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_privacy"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/privacy_guideline"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/invite_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="420dp"/>

    <TextView
        android:id="@+id/invite_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_invite"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/invite_guideline"
        app:layout_constraintStart_toStartOf="parent"/>

    <ViewFlipper
        android:id="@+id/group_edit_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--FIRST READ ONLY-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detail_group_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:hint="@string/group_name"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/desc_read_guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="220dp" />

            <TextView
                android:id="@+id/group_desc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/descriptor"
                android:maxLines="3"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/desc_read_guideline" />

            <android.support.constraint.Guideline
                android:id="@+id/privacy_read_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="320dp"/>

            <TextView
                android:id="@+id/privacy_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/privacy_read_guideline"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="36dp"
                android:textSize="16sp"
                android:text="@string/Temp"/>

            <android.support.constraint.Guideline
                android:id="@+id/invite_read_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="420dp"/>
            <TextView
                android:id="@+id/invite_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/invite_read_guideline"
                android:layout_marginTop="36dp"
                android:textSize="16sp"
                android:text="@string/Temp"/>
        </android.support.constraint.ConstraintLayout>

        <!--FOR WRITE ONLY-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/detail_group_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                android:hint="@string/group_name">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/group_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/save_group_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/desc_edit_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="212dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/desc_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/desc_edit_guideline"
                android:visibility="visible"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                android:hint="@string/descriptor">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/group_desc_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.Guideline
                android:id="@+id/privacy_write_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="320dp"/>

            <RadioGroup
                android:id="@+id/privacy_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/privacy_write_guideline"
                android:weightSum="3"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/public_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/event_public"
                    android:textSize="16sp"
                    android:layout_weight="1" />
                <RadioButton
                    android:id="@+id/discoverable_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/event_discoverable"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/exclusive_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/event_exclusive"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </RadioGroup>

            <android.support.constraint.Guideline
                android:id="@+id/invite_write_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="420dp"/>

            <Spinner
                android:id="@+id/invite_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/invite_write_guideline"
                android:layout_marginTop="36dp"
                android:visibility="visible">
            </Spinner>
        </android.support.constraint.ConstraintLayout>

    </ViewFlipper>

</android.support.constraint.ConstraintLayout>