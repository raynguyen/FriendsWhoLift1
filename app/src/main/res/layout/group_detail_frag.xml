<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true">

    <android.support.constraint.Guideline
        android:id="@+id/startguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/group_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintStart_toStartOf="@id/startguideline"
        app:layout_constraintEnd_toStartOf="@id/drawer_guideline"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/privacy_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="320dp" />

    <TextView
        android:id="@+id/privacy_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/group_privacy"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/startguideline"
        app:layout_constraintTop_toTopOf="@id/privacy_guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/invite_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="420dp" />

    <TextView
        android:id="@+id/invite_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/group_invite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/startguideline"
        app:layout_constraintTop_toTopOf="@id/invite_guideline" />

    <ViewFlipper
        android:id="@+id/group_edit_flipper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/drawer_guideline">

        <!--READ ONLY-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/detail_group_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:hint="@string/group_name"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/desc_read_guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="210dp" />

            <TextView
                android:id="@+id/group_desc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/descriptor"
                android:maxLines="3"
                android:textSize="20sp"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@id/desc_read_guideline"
                android:background="@drawable/edit_text_border"/>

            <android.support.constraint.Guideline
                android:id="@+id/privacy_read_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="320dp" />

            <TextView
                android:id="@+id/privacy_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginStart="8dp"
                android:text="@string/Temp"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/privacy_read_guideline" />

            <android.support.constraint.Guideline
                android:id="@+id/invite_read_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="420dp" />

            <TextView
                android:id="@+id/invite_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginStart="8dp"
                android:text="@string/Temp"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/invite_read_guideline" />
        </android.support.constraint.ConstraintLayout>

        <!--WRITE ONLY-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/detail_group_name_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/group_name"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/group_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.Guideline
                android:id="@+id/desc_edit_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="212dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/desc_edit_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/descriptor"
                android:visibility="visible"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/desc_edit_guideline">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/group_desc_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.Guideline
                android:id="@+id/privacy_write_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="320dp" />

            <RadioGroup
                android:id="@+id/privacy_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/privacy_write_guideline">

                <RadioButton
                    android:id="@+id/public_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/event_public"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/discoverable_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:text="@string/event_discoverable"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/exclusive_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/event_exclusive"
                    android:textSize="16sp" />
            </RadioGroup>

            <android.support.constraint.Guideline
                android:id="@+id/invite_write_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="420dp" />

            <Spinner
                android:id="@+id/invite_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/invite_write_guideline">

            </Spinner>
        </android.support.constraint.ConstraintLayout>
    </ViewFlipper>

    <android.support.constraint.Guideline
        android:id="@+id/drawer_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.925"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/drawer_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorAccentLight"
        android:clickable="true"
        android:focusable="false"/>

    <apps.raymond.kinect.UIResources.VerticalTextView
        android:id="@+id/members_vtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/members"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/members_frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".7">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>