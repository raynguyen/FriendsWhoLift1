<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:clickable="true"
    android:background="#ffffff">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/group_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/group_name_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edit_text_border"/>

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ViewFlipper>

    <ImageButton
        android:id="@+id/edit_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/common_full_open_on_phone"
        android:contentDescription="@string/Temp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/detail_group_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/group_name" />

    <TextView
        android:id="@+id/group_desc_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/group_image"
        android:layout_marginTop="44dp"
        android:layout_marginStart="12dp"
        android:hint="@string/descriptor"
        android:maxLines="3"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/detail_group_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:hint="@string/group_name">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/detail_group_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/desc_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group_image"
        android:visibility="visible"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="24dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:hint="@string/descriptor">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/desc_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/privacy_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/group_privacy"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/group_desc_txt"
        app:layout_constraintStart_toStartOf="parent"/>

    <!--ADD A RADIO BUTTON UNDERNEATH WHEN THE EDIT BUTTON IS CLICKED, OTHERWISE JUST SHOW A SINGLE ITEM WITH A BACKGROUND?-->

    <TextView
        android:id="@+id/invite_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/group_invite"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/privacy_txt"
        app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>