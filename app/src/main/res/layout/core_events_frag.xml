<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <TextView
            android:id="@+id/title_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upcoming_events"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="12dp"/>

        <ImageButton
            android:id="@+id/create_event_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/Temp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/fui_ic_twitter_bird_white_24dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/events_Recycler"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/title_Txt"
            android:background="@drawable/edit_text_border_focus">
        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/search_events_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/events_Recycler"
            android:text="@string/event_search"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:indeterminate="true"/>

        <TextView
            android:id="@+id/null_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/null_data_image"
            android:gravity="center_horizontal"
            android:text="@string/null_events"
            android:textSize="20sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/null_data_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            android:contentDescription="@string/Temp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/add_lift"/>

        <Button
            android:id="@+id/checkpr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/checkPRs"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
