<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#CCFFFFFF"
    android:clickable="true"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingBottom="8dp"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text_invitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/invitations"
            android:gravity="center"
            android:textSize="22sp"/>

        <ProgressBar
            android:id="@+id/progress_bar_invitations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/button_close_invitations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/text_invitations"
            app:layout_constraintEnd_toEndOf="@id/text_invitations"
            android:src="@drawable/baseline_clear_black_18dp"
            android:contentDescription="@string/Temp"
            android:background="@color/transparent"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/text_null_data_invitations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/null_data"
            android:visibility="invisible"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_invitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button_close_invitations"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp">
        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>