<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#CCFFFFFF"
    android:padding="12dp"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:layout_gravity="center"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/text_invitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/invitations"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingBottom="12dp"/>

        <ProgressBar
            android:id="@+id/progress_bar_invitations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:id="@+id/button_close_invitations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/text_invitations"
            app:layout_constraintEnd_toEndOf="@id/text_invitations"
            android:src="@drawable/baseline_clear_black_18dp"
            android:contentDescription="@string/Temp"
            android:background="#ffffff"/>

        <TextView
            android:id="@+id/text_null_data_invitations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/null_data"
            android:visibility="invisible"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_invitations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/text_invitations">
        </android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>