<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_events_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">
    </android.support.v7.widget.SearchView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_events_explore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">
        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progress_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_events_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/null_events"
            android:textSize="26sp"
            android:visibility="gone"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_explore_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_event_explore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            android:layout_gravity="bottom"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_event_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/layout_date"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:hint="@string/event_name"/>
                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/text_event_name"
                    android:layout_toStartOf="@id/layout_date"
                    android:layout_marginStart="4dp"
                    android:hint="@string/event_desc"/>
                <TextView
                    android:id="@+id/text_thoroughfare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_date"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp"
                    android:hint="@string/event_address"/>

                <LinearLayout
                    android:id="@+id/layout_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/black"
                    android:padding="4dp"
                    android:layout_margin="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/text_month_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/event_month"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_date"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/time_format"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_primes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_thoroughfare"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_sport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_fitness_center_black_24dp"
                            style="@style/CardPrimaryTags"/>
                        <ImageView
                            android:id="@+id/image_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_local_dining_black_24dp"
                            style="@style/CardPrimaryTags"/>
                        <ImageView
                            android:id="@+id/image_drinks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_local_bar_black_24dp"
                            style="@style/CardPrimaryTags"/>
                        <ImageView
                            android:id="@+id/image_movie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_movie_black_24dp"
                            style="@style/CardPrimaryTags"/>
                        <ImageView
                            android:id="@+id/image_chill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_weekend_black_24dp"
                            style="@style/CardPrimaryTags"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_attending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/null_dashes"
                        android:layout_gravity="end"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/ic_done_black_24dp"
                        android:scaleY=".75"
                        android:scaleX=".75"/>
                </LinearLayout>

                <Button
                    android:id="@+id/button_attend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_date"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/layout_primes"
                    android:text="@string/attend"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@color/blueish"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    
</LinearLayout>