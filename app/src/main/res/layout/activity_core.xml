<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_core_full"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.5">

        <android.support.v7.widget.Toolbar
            android:theme="@style/ToolBarTheme"
            android:id="@+id/core_toolbar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:navigationIcon="@drawable/ic_face_black_24dp">
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <android.support.v7.widget.SearchView
                android:id="@+id/search_myevents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.SearchView>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/core_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:isScrollContainer="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/events_Recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical">
            </android.support.v7.widget.RecyclerView>

            <android.support.constraint.Guideline
                android:id="@+id/progress_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/progress_guideline"
                app:layout_constraintHeight_percent="0.5"
                android:indeterminate="true"/>

            <TextView
                android:id="@+id/fragment_null_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/null_events"
                android:textSize="26sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/progress_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_explore_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal||bottom"
        android:background="@color/transparent"
        android:src="@drawable/ic_map_black_24dp"
        app:borderWidth="0dp"
        android:alpha="0.3"/>
</FrameLayout>