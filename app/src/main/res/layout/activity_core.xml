<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_core_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:theme="@style/ToolBarTheme"
            android:id="@+id/core_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_face_black_24dp"
            android:padding="0dp">
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/core_frame"
            tools:context=".Core_Activity"
            app:layout_constraintTop_toBottomOf="@id/core_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_below="@+id/core_toolbar"
            android:isScrollContainer="true"
            android:fitsSystemWindows="true"
            app:layout_constraintVertical_weight="1">

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_explore_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparent"
            android:src="@drawable/ic_map_black_24dp"
            app:borderWidth="0dp"
            android:alpha="0.3"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>