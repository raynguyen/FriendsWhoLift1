<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="true"
    android:animateLayoutChanges="true">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_create_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="@string/event_name">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_event_create_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/text_header1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_event_name"
                android:text="@string/event_details"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:paddingHorizontal="4dp"
                android:clickable="true"
                android:layout_marginBottom="4dp"/>

            <RelativeLayout
                android:id="@+id/layout_create_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_header1"
                android:paddingHorizontal="4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_create_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/event_desc">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/text_event_create_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="2"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/text_primary_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_create_desc"
                    android:layout_marginTop="4dp"
                    android:text="@string/primary_tags"
                    android:drawableEnd="@drawable/ic_info_outline_black_24dp"
                    android:drawableTint="@color/blueish"
                    android:gravity="center_vertical"
                    android:drawablePadding="12dp"/>

                <LinearLayout
                    android:id="@+id/layout_primary_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_primary_header"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:weightSum="6">

                    <ToggleButton
                        android:id="@+id/toggle_sports"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_fitness"
                        style="@style/PrimaryToggle"/>
                    <ToggleButton
                        android:id="@+id/toggle_food"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_food"
                        style="@style/PrimaryToggle"/>
                    <ToggleButton
                        android:id="@+id/toggle_drinks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_drinks"
                        style="@style/PrimaryToggle"/>
                    <ToggleButton
                        android:id="@+id/toggle_movie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_movie"
                        style="@style/PrimaryToggle"/>
                    <ToggleButton
                        android:id="@+id/toggle_chill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_chill"
                        style="@style/PrimaryToggle"/>
                    <ToggleButton
                        android:id="@+id/toggle_concert"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_concert"
                        style="@style/PrimaryToggle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_privacy_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_primary_tags"
                    android:layout_marginTop="4dp"
                    android:text="@string/event_privacy"
                    android:drawableEnd="@drawable/ic_info_outline_black_24dp"
                    android:drawableTint="@color/blueish"
                    android:gravity="center_vertical"
                    android:drawablePadding="12dp"/>

                <RelativeLayout
                    android:id="@+id/layout_create_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_privacy_header"
                    android:gravity="center_horizontal">

                    <ToggleButton
                        android:id="@+id/button_privacy_exclusive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="@string/event_exclusive" />
                    <ToggleButton
                        android:id="@+id/button_privacy_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/button_privacy_exclusive"
                        android:textOff="@string/event_private"/>
                    <ToggleButton
                        android:id="@+id/button_privacy_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/button_privacy_private"
                        android:textOff="@string/event_public"/>
                </RelativeLayout>

                <CalendarView
                    android:id="@+id/calendar_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_create_privacy"
                    android:layout_gravity="center">
                </CalendarView>

                <!--
                    <LinearLayout
                    android:id="@+id/layout_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <EditText
                        android:id="@+id/text_event_tags"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:hint="@string/event_tags"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:autofillHints="no"/>

                    <ImageButton
                        android:id="@+id/event_tag_add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_event_tags"
