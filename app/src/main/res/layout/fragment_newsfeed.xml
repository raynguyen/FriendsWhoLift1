<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <apps.raymond.kinect.UIResources.NewsFeed_ViewFlipper
            android:id="@+id/viewflipper_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--New events that contain tags you follow.-->
            <include
                layout="@layout/layout_tags_interests">
            </include>

            <!--Public events your friends are attending but you are not.-->
            <include
                layout="@layout/layout_popular_friends">
            </include>

            <!--Public events at locations you frequent.-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="EVENTS AROUND YOUR AREA YOU MAY BE INTERESTED IN"/>

        </apps.raymond.kinect.UIResources.NewsFeed_ViewFlipper>

    </LinearLayout>
</android.support.v7.widget.CardView>