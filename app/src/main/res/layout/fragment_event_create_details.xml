<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textlayout_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:hint="@string/event_name"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_event_create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/event_desc_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="8dp"
        android:hint="@string/event_desc">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_event_create_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/layout_primarytags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:weightSum="5">
        <ToggleButton
            android:id="@+id/toggle_sports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sports_primary_toggle"
            style="@style/PrimaryToggle"/>
        <ToggleButton
            android:id="@+id/toggle_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/food_primary_toggle"
            style="@style/PrimaryToggle"/>
        <ToggleButton
            android:id="@+id/toggle_drinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drinks_primary_toggle"
            style="@style/PrimaryToggle"/>
        <ToggleButton
            android:id="@+id/toggle_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/movie_primary_toggle"
            style="@style/PrimaryToggle"/>
        <ToggleButton
            android:id="@+id/toggle_chill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chill_primary_toggle"
            style="@style/PrimaryToggle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_mail_black_18dp"
            android:contentDescription="@string/messages"/>

        <Spinner
            android:id="@+id/spinner_event_privacy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"
            android:padding="2dp"
            android:layout_weight="1">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_group_black_18dp"
            android:contentDescription="@string/event_tags"/>

        <EditText
            android:id="@+id/text_event_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/event_tags"
            android:textSize="18sp"
            android:layout_weight="1"
            android:autofillHints="no"/>

        <ImageButton
            android:id="@+id/event_tag_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_event_tags"
            app:layout_constraintBottom_toBottomOf="@id/text_event_tags"
            android:src="@drawable/baseline_add_black_18dp"
            android:background="@color/transparent"
            android:contentDescription="@string/Temp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_tags_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/empty_tags"
        android:maxLines="3"
        android:lineSpacingExtra="8sp"
        android:background="@drawable/edit_text_border"
        android:padding="8dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_invite_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:paddingTop="12dp"
        android:text="@string/invite_users"
        android:clickable="false"
        android:focusable="false"/>

    <android.support.v7.widget.SearchView
        android:id="@+id/searchview_users_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.SearchView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_users_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
