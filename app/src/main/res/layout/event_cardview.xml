<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/event_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/calendar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="12dp">
            <TextView
                android:id="@+id/event_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONTH"
                android:gravity="center"/>
            <TextView
                android:id="@+id/event_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAY"
                android:gravity="center"
                android:paddingTop="12dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/event_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:layout_alignParentTop="true"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/event_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/event_title"
                android:src="@drawable/fui_idp_button_background_phone"/>
            <TextView
                android:id="@+id/event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="DESCRIPTION"
                android:layout_below="@+id/event_title"
                android:gravity="center"
                android:paddingTop="24dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/event_desc"
                android:layout_alignParentEnd="true"
                android:src="@drawable/fui_ic_mail_white_24dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>