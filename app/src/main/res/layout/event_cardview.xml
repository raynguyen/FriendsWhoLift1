<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:foreground="?android:attr/selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/main_body_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/event_cardview_bgd">

        <LinearLayout
            android:id="@+id/calendar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:background="@drawable/event_date_background">
            <TextView
                android:id="@+id/event_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_month"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/event_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_day"
                android:gravity="center"
                android:paddingTop="4dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="WW:WW"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/calendar_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/event_name"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/event_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/event_title"
            app:layout_constraintStart_toEndOf="@id/calendar_layout"
            android:text="@string/event_desc"
            android:layout_below="@+id/event_title"
            android:gravity="center"
            android:paddingTop="12dp"
            android:maxLines="1"/>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/main_body_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/event_bottom_bgd">

            <TextView
                android:id="@+id/attending_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/null_dashes"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:drawableStart="@drawable/baseline_done_outline_black_18dp"
                android:scaleY=".75"
                android:scaleX=".75"/>

            <TextView
                android:id="@+id/invited_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/null_dashes"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:drawableStart="@drawable/baseline_mail_black_18dp"
                android:scaleY=".75"
                android:scaleX=".75"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/main_body_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/event_bottom_bgd"
            android:layout_marginStart="24dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_free_breakfast_black_18dp"
                android:tint="@color/blueish"
                android:scaleY="0.75"
                android:scaleX="0.75"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_fitness_center_black_18dp"
                android:tint="@color/blueish"
                android:scaleY="0.75"
                android:scaleX="0.75"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_local_bar_black_18dp"
                android:tint="@color/blueish"
                android:scaleY="0.75"
                android:scaleX="0.75"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_restaurant_black_18dp"
                android:tint="@color/blueish"
                android:scaleY="0.75"
                android:scaleX="0.75"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>