<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fui_bgTwitter"
    android:padding="8dp"
    android:clickable="true"
    android:layout_margin="12dp">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/event_name_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toTopOf="parent"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:hint="@string/event_name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/event_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/event_desc_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/event_name_txt_layout"
        android:layout_marginTop="24dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:hint="@string/event_desc">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/event_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>


    <EditText
        android:id="@+id/event_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONTH"
        app:layout_constraintTop_toBottomOf="@id/event_desc_txt_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/event_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAY"
        app:layout_constraintTop_toBottomOf="@id/event_desc_txt_layout"
        app:layout_constraintStart_toEndOf="@id/event_month"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/event_tags_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:hint="Add some event tags!"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@id/event_tag_add_btn"
        app:layout_constraintTop_toBottomOf="@id/event_month"/>

    <ImageButton
        android:id="@+id/event_tag_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_tags_txt"
        app:layout_constraintBottom_toBottomOf="@id/event_tags_txt"
        android:src="@drawable/googleg_standard_color_18"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"/>
        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>