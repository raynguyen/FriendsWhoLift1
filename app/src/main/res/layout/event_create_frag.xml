<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ProgressBar
            android:id="@+id/create_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/event_name_txt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            android:hint="@string/event_name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/event_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/event_desc_txt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/event_name_txt_layout"
            android:layout_marginTop="24dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            android:hint="@string/event_desc">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/event_desc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:id="@+id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/event_desc_txt_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/start_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/end_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/start_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_start"
                        android:padding="12dp"/>
                    <TextView
                        android:id="@+id/month1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_month"/>
                    <TextView
                        android:id="@+id/day1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_day"
                        android:layout_marginBottom="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/end_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_end"
                        android:padding="12dp"/>
                    <TextView
                        android:id="@+id/month2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_month"/>
                    <TextView
                        android:id="@+id/day2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_day"
                        android:layout_marginBottom="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/discovery_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/date_layout"
            android:textSize="26sp"
            android:text="@string/discovery_header"
            android:clickable="false"
            android:focusable="false"/>

        <Spinner
            android:id="@+id/visibility_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/discovery_txt"
            android:layout_marginTop="12dp"
            android:forceHasOverlappingRendering="false"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"
            android:padding="2dp">
        </Spinner>

        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/visibility_spinner"
            android:layout_marginTop="12dp">

            <AutoCompleteTextView
                android:id="@+id/location_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_address"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/expand_locations_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_down_black_18dp"
                android:background="@color/transparent"
                android:contentDescription="@string/Temp"
                android:layout_gravity="center_vertical"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tags_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/address_layout"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/event_tags_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="@string/event_tags"
                android:textSize="18sp"
                android:layout_weight="1"
                android:autofillHints="no"/>

            <ImageButton
                android:id="@+id/event_tag_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/event_tags_txt"
                app:layout_constraintBottom_toBottomOf="@id/event_tags_txt"
                android:src="@drawable/baseline_add_black_18dp"
                android:background="@color/transparent"
                android:contentDescription="@string/Temp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tags_container_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tags_layout"
            android:hint="@string/empty_tags"
            android:maxLines="3"
            android:lineSpacingExtra="8sp"
            android:background="@drawable/edit_text_border"
            android:padding="8dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/event_extras_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tags_container_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.SearchView
                    android:id="@+id/userSearchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tags_container_txt"
                    android:layout_weight="1">
                </android.support.v7.widget.SearchView>
                <ImageButton
                    android:id="@+id/expand_users_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_fullscreen_black_18dp"
                    android:background="@drawable/button_ripple"
                    android:contentDescription="@string/Temp"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/add_users_recycler"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintTop_toBottomOf="@id/userSearchView">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:text="@string/cancel"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:text="@string/create_event"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>
</ScrollView>