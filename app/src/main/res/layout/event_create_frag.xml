<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:padding="8dp"
    android:clickable="true">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/event_name_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toTopOf="parent"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:hint="@string/event_name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/event_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/event_desc_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/event_name_txt_layout"
        android:layout_marginTop="24dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:hint="@string/event_desc">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/event_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>


    <EditText
        android:id="@+id/event_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONTH"
        app:layout_constraintTop_toBottomOf="@id/event_desc_txt_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/event_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAY"
        app:layout_constraintTop_toBottomOf="@id/event_desc_txt_layout"
        app:layout_constraintStart_toEndOf="@id/event_month"
        android:layout_marginStart="24dp"/>

    <RadioGroup
        android:id="@+id/privacy_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_month"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/public_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/event_public"
            android:layout_weight="1" />
        <RadioButton
            android:id="@+id/discoverable_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/event_discoverable"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/exclusive_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/event_exclusive"
            android:layout_weight="1"/>
    </RadioGroup>

    <EditText
        android:id="@+id/event_tags_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:hint="Add some event tags!"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@id/event_tag_add_btn"
        app:layout_constraintTop_toBottomOf="@id/privacy_buttons"/>

    <ImageButton
        android:id="@+id/event_tag_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_tags_txt"
        app:layout_constraintBottom_toBottomOf="@id/event_tags_txt"
        android:src="@drawable/googleg_standard_color_18"/>

    <TextView
        android:id="@+id/tags_container_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/event_tags_txt"
        android:hint="@string/empty_tags"
        android:gravity="center"
        android:lines="3"
        android:lineSpacingExtra="8sp"
        android:background="@drawable/edit_text_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="2">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ButtonBar"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ButtonBar"
            android:text="@string/save"
            android:layout_weight="1"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>